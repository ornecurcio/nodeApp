<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="hidden" name="_method" value="DELETE" >
                        <button class="btn btn-secondary btn-block btn-sm" type="submit">
                          Delete
                        </button>
                    </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <p class="lead">You have to write a Note first!</p>
            <a href="/notes/add" class="btn btn-success btn-block">Create One</a>
        </div>
    </div>
    {{/each}}
</div>